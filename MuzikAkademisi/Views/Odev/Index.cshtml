@using MuzikAkademisi.Entities.Model
@model List<Odev>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnasayfaLayout.cshtml";
}
<html>
<head>
    <style>
        #btn {
            background-color: white;
            border: none;
            color: black;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 10px;
            border-style: solid;
            margin-left: 3px;
            border-style: solid;
        }

        #ekle {
            background-color: palevioletred;
            border: none;
            color: black;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top:50px;
            margin-right:50px;
            float:right;
            border-radius: 10px;
            border-style: solid;
        }   
            .kapsayici
        {
        margin-top:100px;
        
        width:auto;
        height:100%;
        display:flex;
        justify-content:center;
        flex-wrap:wrap;
        text-align:center;
       
        
        }
            
            
    </style>


    <script>/*const { Alert } = require("bootstrap");*/



        window.onload = function gizle() {
            var bilgiYetki = document.getElementById("yetkiBilgi").value;
            var buton = document.getElementsByClassName("btn");
            var arrFromsList = Array.prototype.slice.call(buton);

            if (bilgiYetki == "O") {


                for (var i = 0; i <= arrFromsList.length; i++) {

                    arrFromsList[i].style.display = "none";

                }
                alert("Kullanıcı sisteme giriş yaptı.")
            }
            else {

                Alert("Admin sisteme giriş yaptı.")


            };


        }</script>

</head>
<body>
    <a id="ekle" class="btn" href="~/Odev/Ekle/">Ödev Ekle</a>
    <div class="kapsayici">

        @foreach (var odev in Model)
        {
<div style="width:400px; height:400px; margin-left:55px;  margin-top:50px;">


    <a style="color:black; text-decoration:none;" href="/Odev/Detay/@odev.OdevId">
        <div style="width: 400px; height: 400px; background-color: palevioletred; margin: 20px; border-style: solid; border-radius: 20px; ">
            <img src="@odev.OdevFotograf" style="width: 400px; height: 150px; border-radius: 17px;" />
            <p><b>@odev.OdevAdi</b></p>
            <p><b>NOT: @odev.OdevAciklama</b></p>
            <a id="btn" class="btn" href="/Odev/Sil/@odev.OdevId">Sil</a>&nbsp;
            <a id="btn" class="btn" href="/Odev/Guncelle/@odev.OdevId">Güncelle</a>

        </div>
    </a>
</div>  }
        <button style="display:none;"  id="yetkiBilgi" value="@Session["yetki"].ToString()"></button>



    </div>
</body>
</html>

