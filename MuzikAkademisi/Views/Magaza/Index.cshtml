 }

<html>
<head>
    <style>
        #btn {
            background-color: white;
            border: none;
            color: black;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-style: solid;
            border-radius: 10px;
            margin-left: 20px;
            border-style: solid;
        }

        #ekle {
            background-color: palevioletred;
            border: none;
            color: black;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 5px 1700px;
            border-style: solid;
            border-radius: 10px;
        }
    </style>

    <script>
        /*const { Alert } = require("bootstrap");*/



        window.onload = function gizle() {
            var bilgiYetki = document.getElementById("yetkiBilgi").value;
            var buton = document.getElementsByClassName("btn");
            var arrFromsList = Array.prototype.slice.call(buton);

            if (bilgiYetki == "K") {
                

                for (var i = 0; i <= arrFromsList.length; i++) {

                    arrFromsList[i].style.display = "none";

                }
                alert("Kullanıcı sisteme giriş yaptı.")
            }
            else {

                Alert("Admin sisteme giriş yaptı.")


            };


        }

