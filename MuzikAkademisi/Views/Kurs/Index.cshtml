@using MuzikAkademisi.Entities.Model
@model List<Kurs>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_AnasayfaLayout.cshtml"; }
<html>
<head>
    <style>
        #btn {
            background-color: white;
            border: none;
            color: black;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 10px;
        }

        #ekle {
            background-color: palevioletred;
            border: none;
            color: black;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 5px 1700px 0;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <a id="ekle" href="/Kurs/Ekle/">Kurs Ekle</a>
    <a id="ekle" href="/Sepet/Index/">Kurs Sepeti</a>

    <div class="container" style="width: 500px; height: 500px;  ">
        <div style="width: 400px; height: 400px; background-color: palevioletred; margin: 10px 20px; ">

            @foreach (var krs in Model)
            {
<div style="width: 400px; height: 400px; background-color: palevioletred; margin: 20px 20px;  ">
    <a href="Kurs/Guncelle/@krs.KursId"><img src="@krs.KursFotograf" style="width:380px; height:150px; " /></a>
    <p><b>KURS ADI: @krs.KursAdi</b></p>
    <p><b>FİYAT: @krs.KursFiyat</b></p>

    <div style="width:400px; height:200px; margin-top:40px; ">
        <a id="btn" href="/Kurs/Sil/@krs.KursId"> Sil </a>
        <a id="btn" href="/Kurs/Guncelle/@krs.KursId"> Güncelle </a>
        <a id="btn" href="/Uye/Index/@krs.KursId"> Üye Listele </a>
        <a id="btn" href="/Sepet/Index/@krs.KursId"> Sepete Ekle</a>
    </div>

</div>}
        </div>
    </div>

</body>
</html>

